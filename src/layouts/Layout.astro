---
import logoHeader from '../img/logo1.png'
import menu from "../img/menu.png"
import HeaderButton from '../components/HeaderButton.astro'
import { hoveringButton } from '../store'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Iglesia Pueblo Nuevo</title>
	</head>
	<header class='bg-orange-200 flex justify-center bg-opacity-50 w-full px-4'>
		<div class='container flex justify-between items-center'>
			<a href='/paginaIglesia/'>
				<img src={logoHeader.src} class='h-14 p-2' />
			</a>
			<div class='xl:flex hidden xl:items-center xl:gap-8 xl:bg-transparent xl:w-2/5 xl:justify-center'>
				<HeaderButton buttonText='Iglesia'>
					<div class="hidden flex-col justify-center container-iglesia">
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Creemos en...</a>
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Ubicaciones</a>
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Agenda</a>
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Grupos Celulares</a>
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Asociacion Filantrópica</a>
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Nuestro Pastor</a>
					</div>
				</HeaderButton>
				<HeaderButton buttonText='Material'>
					<div class="hidden flex-col justify-center container-material">
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Estudios Inductivos</a>
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Discipulados</a>
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Otros Escritos</a>
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Guias De Oración</a>
					</div>
				</HeaderButton>
				<HeaderButton buttonText='Niños'>
					<div class="hidden flex-col justify-center container-kids">
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Trabajo</a>
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Material</a>
					</div>
				</HeaderButton>
				<HeaderButton buttonText='Centro de desarrollo'>
					<div class="hidden flex-col justify-center container-centro">
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Descripción</a>
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Ubicación</a>
						<a href='#' class="py-2 px-6 hover:text-white hover:bg-logo transition-colors duration-200">Reservas</a>
					</div>			
				</HeaderButton>
				<HeaderButton buttonText='Contacto'></HeaderButton>
			</div>
			<div class="flex xl:hidden">
				<img src={menu.src} alt="" class="h-12">
			</div>
		</div>
	</header>
	<body>
		<slot />
	</body>
	<footer class='w-full bg-logo flex-col flex items-center'>
		<h1 class='text-white xl:text-4xl py-5'>Nos gustaría que nos contactes</h1>
	</footer>
</html>

<style>
	html,
	body {
		background-color: rgb(255, 237, 213);
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

<script>
	import { hoveringButton } from "../store";

	hoveringButton.subscribe(hoveringButton => {
		if (hoveringButton) {
			document.querySelectorAll(".container-iglesia .container-material .container-kids .container-centro").forEach((clase) => {
				clase.classList.remove("hidden")
				clase.classList.add("flex")
			})
		}
	})
</script>