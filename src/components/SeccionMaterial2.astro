---
import fileIcon from "../img/fileIcon.svg"

const { titleSection, descriptionSection, cantidadPdfs } = Astro.props
---

<div class="flex flex-col w-1/4 h-1/3 bg-blue-500 rounded-lg">
    <div class="flex flex-row justify-between m-2 mx-3">
        <img src={fileIcon.src} alt="" class="h-7">
        <p>{cantidadPdfs}</p>
    </div>
    <div>
        <h2>{titleSection}</h2>
        <p>{descriptionSection}</p>
    </div>
</div>